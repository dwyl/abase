{
  "table_name": "user_data",
  "fields": {
    "email": {
      "type": "string",
      "email": "true",
      "required": true
    },
    "username": {
      "type": "string",
      "min": 3,
      "max": 20,
      "required": true
    },
    "password":{
       "type":"string",
       "password": true,
       "require":true,
       "min": 8
    },
    "dob":{
       "type":"date"
    },
    "gender": {
        "type": "string",
        "values": ["M", "F", "O", "NA"]
    }
  },
  "pages": {
    "register": {
      "path": "/signup",
      "type": "signup",
      "method": [
        "GET",
        "POST"
      ],
      "fields": [
        {
          "field": "email",
          "type": "id",
          "attributes": {
            "name": "email",
            "label": "Email: "
          }
        },
        {
          "field": "password",
          "type": "password",
          "attributes": {
            "name": "password",
            "label": "Password: "
          }
        }
      ]
    },
    "login": {
      "path": "/login",
      "type": "login",
      "method": [
        "GET",
        "POST"
      ],
      "fields": [
        {
          "field": "email",
          "type": "id",
          "attributes": {
            "name": "email",
            "label": "Email: "
          }
        },
        {
          "field": "password",
          "type": "password",
          "attributes": {
            "name": "password",
            "label": "Password: "
          }
        }
      ]
    },
    "user_list": {
      "path": "/user/list",
      "type": "user_list",
      "method": [
        "GET"
      ],
      "fields": [
        {
          "field": "id"
        },
        {
          "field": "email"
        },
        {
          "field": "username"
        }
      ]
    },
    "user_detail": {
      "path": "/user/detail/{id_user}",
      "type": "user_detail",
      "method": [
        "GET"
      ],
      "fields": [
        {
          "field": "id"
        },
        {
          "field": "email"
        },
        {
          "field": "username"
        }
      ]
    },
    "user_edit": {
      "path": "/user/edit/{id_user}",
      "type": "user_edit",
      "method": [
        "GET",
        "POST"
      ],
      "fields": [
        {
          "field": "id",
          "attributes": {
            "name": "id"
          }
        },
        {
          "field": "email",
          "type": "id",
          "attributes": {
            "name": "email",
            "label": "Email: "
          }
        },
        {
          "field": "username",
          "attributes": {
            "name": "username",
            "label": "Username: "
          }
        },
        {
          "field": "dob",
          "attributes": {
            "name": "dob",
            "label": "D.O.B: "
          }
        }
      ]
    }
  }
}
