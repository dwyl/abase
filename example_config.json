{
   "table":"user",
   "fields":{
      "email":{
         "type":"string",
         "email":true,
         "required":true
      },
      "username":{
         "type":"string",
         "min":3,
         "max":20,
         "required":true
      },
      "password":{
         "type":"password",
         "require":true
      },
      "dob":{
         "type":"date"
      },
      "gender": {
          "type": "string",
          "values": ["M", "F", "O", "NA"]
      }
   },
   "pages":{
      "register":{
         "path":"/signup",
         "edit":true,
         "contents":[
            {
              "field": "email",
              "options": {}
            },
            {
              "field": "username",
              "options": {}
            },
            {
               "field":"password",
               "options":{
                  "confirmation":true
               }
            }
         ]
      },
      "login":{
         "edit":true,
         "contents":[
           {
             "field": "email",
             "options": {}
           },
           {
              "field":"password",
              "options":{}
           }
         ]
      },
      "deets":{
         "contents":[
            "username",
            "name",
            "gender"
         ]
      }
   }
}
